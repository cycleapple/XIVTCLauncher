<Window x:Class="FFXIVSimpleLauncher.Views.WebLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="FFXIV 登入"
        Height="700" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status Bar -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <TextBlock x:Name="StatusText"
                       Text="載入中..."
                       Foreground="White"
                       FontSize="12"/>
        </Border>

        <!-- WebView2 - Source set programmatically after environment initialization -->
        <wv2:WebView2 x:Name="WebView"
                      Grid.Row="1"/>

        <!-- Bottom Bar -->
        <Border Grid.Row="2" Background="#2D2D30" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton"
                        Content="取消"
                        Click="CancelButton_Click"
                        Padding="20,5"
                        Margin="0,0,10,0"/>
                <Button x:Name="RefreshButton"
                        Content="重新整理"
                        Click="RefreshButton_Click"
                        Padding="20,5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
